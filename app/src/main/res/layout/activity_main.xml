<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

    <ImageButton
        android:id="@+id/imageButtonSearch"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/accueil"
        app:srcCompat="@android:drawable/ic_menu_search"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/imageViewSwallow"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/swallow"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/accueil"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/action_bar_height"
        android:background="?attr/colorPrimary"
        android:theme="@style/AlertDialog.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageViewSwallow"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonSearch" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="@dimen/custom_tab_layout_height"
        android:background="@color/colorPrimary"
        android:theme="@style/AlertDialog.AppCompat.Light"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>

